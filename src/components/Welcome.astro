      <div class="w-full max-w-2xl mt-4 mx-auto">
        <form id="contact-native-form-spa" action="https://formsubmit.co/silvanleidi@gmail.com" method="POST" class="space-y-4 bg-white p-6 rounded-lg shadow-md form-card">
          <input type="hidden" name="_captcha" value="false" />
          <input type="hidden" name="_subject" value="Nuevo mensaje desde tu portfolio" />

          <div>
            <label for="spa-name" class="block font-medium form-label">Nombre <span class="text-red-600">*</span></label>
            <input id="spa-name" name="name" type="text" required class="form-input" placeholder="Tu nombre" />
          </div>

          <div>
            <label for="spa-email" class="block font-medium form-label">Email <span class="text-red-600">*</span></label>
            <input id="spa-email" name="_replyto" type="email" required class="form-input" placeholder="tu@correo.com" />
          </div>

          <div>
            <label for="spa-subject" class="block font-medium form-label">Asunto <span class="text-red-600">*</span></label>
            <input id="spa-subject" name="subject" type="text" required class="form-input" placeholder="¿Sobre qué quieres escribirme?" />
          </div>

          <div>
            <label for="spa-message" class="block font-medium form-label">Mensaje <span class="text-red-600">*</span></label>
            <textarea id="spa-message" name="message" rows="6" required class="form-textarea" placeholder="Cuéntame tu propuesta, duda o comentario..."></textarea>
          </div>

          <div class="flex items-center gap-3">
            <button type="submit" id="contact-submit-spa" class="date-badge px-5 py-2 rounded-lg">Enviar correo</button>
          </div>

          <div id="contact-success-spa" class="hidden mt-4 p-4 rounded bg-green-50 text-green-800">Mensaje enviado. Gracias por contactarme.</div>
          <div id="contact-error-spa" class="hidden mt-4 p-4 rounded bg-red-50 text-red-800">Error al enviar. Por favor intenta de nuevo.</div>
        </form>
      </div>
    </div>
