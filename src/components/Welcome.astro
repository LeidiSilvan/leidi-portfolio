          const rect = target.getBoundingClientRect();
          const absoluteTop = window.scrollY + rect.top;
          // add a slightly larger margin on mobile to ensure the heading is fully visible
          const desiredTop = Math.max(0, Math.round(absoluteTop - navH - 18));
          window.scrollTo({ top: desiredTop, behavior: 'smooth' });
