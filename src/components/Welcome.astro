  /** @type {(href: string) => void} */
  const scrollToSection = (/** @type {string} */ href) => {
        const target = document.querySelector(href);
        if(!target) return;
        // On small screens compute an explicit top so the title is visible below the nav
        if(window.innerWidth <= 640){
          // Prefer measuring the actual nav element height (more reliable across mobile states)
