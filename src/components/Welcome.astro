    <style>
      .cv-svg-link svg,
      .github-svg-link svg,
      .linkedin-svg-link svg,
      .correo-svg-link svg {
        transition:
          transform 0.2s,
          box-shadow 0.2s,
          background 0.2s,
          fill 0.2s;
        border-radius: 50%;
        background: #fff;
        box-shadow: 0 2px 8px rgba(124, 58, 237, 0.12);
        padding: 6px;
        fill: #fff;
      }
      .cv-svg-link:hover svg,
      .github-svg-link:hover svg,
      .linkedin-svg-link:hover svg,
      .correo-svg-link:hover svg {
        transform: scale(1.18) translateY(-4px) rotate(-8deg);
        box-shadow: 0 8px 24px rgba(220, 38, 38, 0.25);
        background: #fff;
        fill: #dc2626;
        cursor: pointer;
      }

      /* Estilos para Habilidades Técnicas */
      .skills-section {
        background: transparent;
        padding-bottom: 48px;
      }
      .skills-grid {
        width: 100%;
        max-width: 1100px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 18px;
        padding: 0 20px;
      }
      .skill-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: #ffffff;
        border-radius: 12px;
        padding: 14px;
        box-shadow: 0 6px 18px rgba(16, 24, 40, 0.06);
        transition:
          transform 200ms ease,
          box-shadow 200ms ease;
      }
      .skill-card img {
        width: 56px;
        height: 56px;
        object-fit: contain;
        margin-bottom: 8px;
      }
      .skill-card span {
        font-size: 0.95rem;
        font-weight: 600;
        color: #0f172a;
        text-align: center;
      }
      .skill-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 18px 40px rgba(15, 23, 42, 0.12);
        cursor: pointer;
      }
      @media (max-width: 640px) {
        .skills-grid {
          gap: 12px;
        }
        .skill-card img {
          width: 48px;
          height: 48px;
        }
      }
    </style>
