  <style>
  /* ensure hero content is not hidden under the sticky nav */
  /* increased padding so the heading is fully visible below the sticky nav (raised further) */
  .hero-section{ padding-top:160px; }
  @media (max-width: 640px){ .hero-section{ padding-top:160px; } }

    /* posicionar la fila de iconos; en desktop a la izquierda junto al título */
  .social-row{ position:relative; display:flex; align-items:center; justify-content:flex-start; gap:12px; margin-top:8px; z-index:20; }
    /* estilo para los enlaces sociales: circulito blanco con icono dentro */
    .social-row a{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      width:56px;
      height:56px;
      border-radius:999px;
      background: #ffffff;
      padding:8px;
      text-decoration:none;
      box-shadow: 0 6px 18px rgba(2,6,23,0.18);
      transition: transform 160ms ease, box-shadow 160ms ease;
    }
    .social-row a:hover{ transform: translateY(-4px); box-shadow: 0 14px 30px rgba(2,6,23,0.22); }
    /* make the inner icon larger */
    .social-row img, .social-row svg{ width:36px; height:36px; display:block; }
    /* ensure inline SVGs use a visible color (dark) unless they use currentColor */
    .social-row svg{ color: #0f172a; fill: #0f172a; stroke: #0f172a; }

    /* HERO GRID layout */
  /* center the whole hero composition on the page */
  .hero-grid{ display:grid; grid-template-columns: 1fr 560px 1fr; align-items:center; gap:2.5rem; width:100%; max-width:1400px; margin:0 auto; justify-items:center; }
  .hero-left{ padding:2rem 0; text-align:left; align-self:center; justify-self:stretch; }
  .hero-right{ padding:2rem 0; text-align:left; align-self:center; justify-self:stretch; }
  /* move the main heading down more so sticky nav doesn't overlap it */
  .hero-left h1{ margin-top: 4rem; text-align: center; justify-self: center; width:100%; }
  /* also center the subtitle under the main heading */
  .hero-left h2{ text-align: center; justify-self: center; width:100%; }
  @media (max-width: 640px){ .hero-left h1{ margin-top: 6rem; } }
    .hero-center .avatar-wrap{ display:flex; align-items:center; justify-content:center; }
  /* show the avatar as the raw photo (no circular frame) */
  .avatar-img{ width:520px; height:520px; object-fit:cover; border-radius:0; border:none; box-shadow:none; background:transparent; }
    /* Gradient overlay at the bottom of the avatar (subtle, sits over the image) */
    .avatar-wrap::after{
      content:"";
      position:absolute;
      left:0;
      right:0;
      bottom:0;
      height:30%;
      pointer-events:none;
      z-index:20; /* above the photo */
      background: linear-gradient(180deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
    }
    @media (max-width: 1024px){ .avatar-wrap::after{ height:36%; } }
    @media (max-width: 640px){ .avatar-wrap::after{ height:48%; } }

  /* background image was removed per request */

    /* ajustes responsivos: en pantallas pequeñas apilar verticalmente */
    @media (max-width: 1024px){
      .hero-grid{ grid-template-columns: 1fr; text-align:center; }
      .hero-left, .hero-right{ align-items:center; text-align:center; }
      .social-row{ justify-content:center; }
  .avatar-img{ width:360px; height:360px; }
  .avatar-wrap::after{ height:42%; }
    }

    /* ajustes responsivos pequeños */
  @media (max-width: 640px){ .social-row{ gap:10px; } .social-row a{ width:44px; height:44px; padding:6px } .social-row img, .social-row svg{ width:24px; height:24px } .avatar-img{ width:160px; height:160px } .avatar-wrap::after{ height:48%; } }
  </style>

  <script>
    // Ajuste dinámico del padding-top del hero según la altura de la nav sticky
    (function(){
      const heroEl = /** @type {any} */ (document.querySelector('.hero-section'));
      const navEl = /** @type {any} */ (document.querySelector('.site-nav'));
      if(!heroEl || !navEl) return;
      function adjust(){
        // @ts-ignore
        const navHeight = navEl.getBoundingClientRect().height || 0;
  // dejar un espacio extra mayor para asegurar que el H1 no quede tapado
  // @ts-ignore
  heroEl.style.paddingTop = (navHeight + 48) + 'px';
      }
      document.addEventListener('DOMContentLoaded', adjust);
      window.addEventListener('load', adjust);
      window.addEventListener('resize', adjust);
      // si la nav cambia (por ejemplo al abrir el mobile menu), recalcular
      try{
        const mo = new MutationObserver(adjust);
        mo.observe(navEl, { attributes: true, childList: true, subtree: true });
      }catch(e){}
    })();
  </script>


