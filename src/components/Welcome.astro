      const submitBtn = submitBtnEl ? /** @type {HTMLButtonElement} */ (submitBtnEl) : null;
      /** @type {HTMLElement | null} */
      const successBox = document.getElementById('contact-success-spa');
      /** @type {HTMLElement | null} */
      const errorBox = document.getElementById('contact-error-spa');
      const ENDPOINT = form.action;

      form.addEventListener('submit', async function(e){
        e.preventDefault();
        if(submitBtn && submitBtn instanceof HTMLButtonElement){ submitBtn.disabled = true; submitBtn.textContent = 'Enviando...'; }
        if(successBox) successBox.classList.add('hidden');
