  .social-row{ position:relative; display:flex; align-items:center; justify-content:flex-start; gap:12px; margin-top:8px; z-index:20; }
    
    .social-row a{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      width:56px;
      height:56px;
      border-radius:999px;
      background: #ffffff;
      padding:8px;
      text-decoration:none;
      box-shadow: 0 6px 18px rgba(2,6,23,0.18);
      transition: transform 160ms ease, box-shadow 160ms ease;
    }
    .social-row a:hover{ transform: translateY(-4px); box-shadow: 0 14px 30px rgba(2,6,23,0.22); }
    
    .social-row img, .social-row svg{ width:36px; height:36px; display:block; }
   
    .social-row svg{ color: #0f172a; fill: #0f172a; stroke: #0f172a; }

    .social-row a.icon{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      width:56px;
      height:56px;
      border-radius:999px;
      flex-shrink:0;
      background:#ffffff;
      box-shadow: 0 6px 18px rgba(2,6,23,0.06);
      border:1px solid rgba(15,23,42,0.04);
      position:relative;
      padding:8px;
      text-decoration:none;
      transition: transform 200ms cubic-bezier(.2,.9,.2,1), box-shadow 200ms ease, background 200ms ease;
      cursor: pointer;
    }
  .social-row a.icon:focus{ outline: none; box-shadow: 0 0 0 4px rgba(79,70,229,0.12); }
  .social-row a.icon:hover{ transform: translateY(-4px); box-shadow: 0 14px 30px rgba(2,6,23,0.22); }
  .social-row a.icon:active{ transform: translateY(-2px); }
  .social-row a.icon svg{ display:block; width:36px; height:36px; stroke:currentColor; fill:none; transition: transform 160ms ease; }

    .social-row a:not(.icon){
      display:inline-flex;
      align-items:center;
      justify-content:center;
      width:56px;
      height:56px;
      border-radius:999px;
      background:#ffffff;
      padding:8px;
      box-shadow: 0 6px 18px rgba(2,6,23,0.06);
      border:1px solid rgba(15,23,42,0.04);
      text-decoration:none;
    }
    .social-row a:not(.icon) svg, .social-row a:not(.icon) img{ width:36px; height:36px; display:block; }

    .icon-with-label{ display:inline-flex; align-items:center; gap:10px; text-decoration:none; }
    .icon-text{ font-weight:800; color:#374151; }
    .icon-with-label:hover .icon-text{ color:#4f46e5; }

    .icon-text-only{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      padding:10px 18px;
      border-radius:999px;
      background:#ffffff;
      box-shadow: 0 6px 18px rgba(2,6,23,0.06);
      border:1px solid rgba(15,23,42,0.04);
      font-weight:800;
      color:#374151;
      text-decoration:none;
      transition: transform 200ms cubic-bezier(.2,.9,.2,1), box-shadow 200ms ease, color 160ms ease;
    }
    .icon-text-only:hover{ transform: translateY(-6px) scale(1.02); box-shadow: 0 24px 60px rgba(79,70,229,0.12); color:#4f46e5; }
    .icon-text-only:active{ transform: translateY(-2px) scale(0.99); }
    .cv-actions{ flex-wrap:nowrap; }
    .cv-actions .icon-text-only{ white-space:nowrap; }

  .social-action{ display:inline-flex; align-items:center; gap:10px; text-decoration:none; color:inherit }
  .social-action .action-icon{ display:inline-flex; align-items:center; justify-content:center; width:56px; height:56px; border-radius:999px; background:#ffffff; padding:8px; box-shadow: 0 6px 18px rgba(2,6,23,0.18); transition: transform 160ms ease, box-shadow 160ms ease; }
  .social-action .action-icon img{ width:28px; height:28px; display:block }
  .social-action .action-label{
    font-weight:800;
    color:#ffffff;
    background: linear-gradient(90deg,#7c3aed,#ec4899);
    padding:6px 12px;
    border-radius:999px;
    box-shadow: 0 12px 36px rgba(124,58,237,0.12);
    transition: transform 180ms ease, box-shadow 180ms ease, filter 180ms ease;
  }

  .social-action:hover .action-icon{ transform: none; box-shadow: 0 6px 18px rgba(2,6,23,0.18); }
  .social-action:hover .action-label{ transform: translateY(-3px); box-shadow: 0 18px 46px rgba(124,58,237,0.18); }

  .cv-actions{
