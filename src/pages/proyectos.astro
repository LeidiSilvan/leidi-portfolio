---
import Layout from "../layouts/Layout.astro";
import astroIcon from "../components/imagenesIcons/astro.png";
---

<Layout>
  <main class="py-12 flex flex-col items-center w-full">
    <h1 class="text-3xl font-bold mb-6">Proyectos</h1>

    <section class="projects-section flex flex-col items-center py-12 w-full">
      <h3 class="text-2xl font-bold mb-6">Proyectos</h3>

      <div class="projects-grid" role="list">
        <article class="project-card" role="listitem">
          <img src={astroIcon.src} alt="Proyecto 1" class="project-img" />
          <h4 class="project-title">Proyecto 1</h4>
          <p class="project-desc">
            Breve descripción del Proyecto 1. Tecnologías: HTML, CSS, JS.
          </p>
          <div class="project-links">
            <a
              href="https://github.com/usuario/proyecto1"
              target="_blank"
              rel="noopener noreferrer">Código</a
            >
            <a
              href="https://proyecto1.demo"
              target="_blank"
              rel="noopener noreferrer">Demo</a
            >
          </div>
        </article>

        <article class="project-card" role="listitem">
          <img src={astroIcon.src} alt="Proyecto 2" class="project-img" />
          <h4 class="project-title">Proyecto 2</h4>
          <p class="project-desc">
            Breve descripción del Proyecto 2. Backend y API REST.
          </p>
          <div class="project-links">
            <a
              href="https://github.com/usuario/proyecto2"
              target="_blank"
              rel="noopener noreferrer">Código</a
            >
            <a
              href="https://proyecto2.demo"
              target="_blank"
              rel="noopener noreferrer">Demo</a
            >
          </div>
        </article>

        <article class="project-card" role="listitem">
          <img src={astroIcon.src} alt="Proyecto 3" class="project-img" />
          <h4 class="project-title">Proyecto 3</h4>
          <p class="project-desc">
            Breve descripción del Proyecto 3. SPA con framework moderno.
          </p>
          <div class="project-links">
            <a
              href="https://github.com/usuario/proyecto3"
              target="_blank"
              rel="noopener noreferrer">Código</a
            >
            <a
              href="https://proyecto3.demo"
              target="_blank"
              rel="noopener noreferrer">Demo</a
            >
          </div>
        </article>
      </div>

      <style>
        .projects-section { background: transparent; padding-top: 12px; padding-bottom: 48px; }
        .projects-grid {
          width: 100%;
          max-width: 1100px;
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
          gap: 18px;
          padding: 0 20px;
        }
        .project-card {
          background: #ffffff;
          border-radius: 12px;
          padding: 12px;
          box-shadow: 0 6px 18px rgba(16, 24, 40, 0.06);
          display: flex;
          flex-direction: column;
          gap: 8px;
          transition: transform 200ms ease, box-shadow 200ms ease;
        }
        .project-card:hover { transform: translateY(-8px); box-shadow: 0 18px 40px rgba(15, 23, 42, 0.12); cursor: pointer; }
        .project-img { width: 100%; height: 160px; object-fit: cover; border-radius: 10px; background: #f3f4f6; }
        .project-title { font-size: 1.05rem; font-weight: 700; margin: 0; }
        .project-desc { font-size: 0.95rem; color: #334155; margin: 0; flex-grow: 1; }
        .project-links { display: flex; gap: 10px; margin-top: 6px; }
        .project-links a { display: inline-block; padding: 6px 10px; background: #ffffff; border-radius: 8px; box-shadow: 0 2px 8px rgba(124, 58, 237, 0.06); color: #0f172a; font-weight: 600; text-decoration: none; transition: transform 0.15s, box-shadow 0.15s; }
        .project-links a:hover { transform: translateY(-4px); box-shadow: 0 8px 24px rgba(124, 58, 237, 0.12); }
        @media (max-width: 640px) { .project-img { height: 120px; } }
      </style>
    </section>
  </main>
</Layout>
